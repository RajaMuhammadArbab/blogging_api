{
    "info": {
        "name": "Blogging Platform API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "_postman_id": "blogging-api-collection"
    },
    "item": [
        {
            "name": "User Registration",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"username\": \"testuser\",\n    \"email\": \"test@example.com\",\n    \"password\": \"securepassword\"\n}"
                },
                "url": {
                    "raw": "http://localhost:8000/api/register/",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "8000",
                    "path": [
                        "api",
                        "register"
                    ]
                }
            }
        },
        {
            "name": "User Login",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"username\": \"testuser\",\n    \"password\": \"securepassword\"\n}"
                },
                "url": {
                    "raw": "http://localhost:8000/api/login/",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "8000",
                    "path": [
                        "api",
                        "login"
                    ]
                }
            }
        },
        {
            "name": "Create Blog Post",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer <your_token>"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"title\": \"My First Blog Post\",\n    \"content\": \"This is the content of the blog post.\"\n}"
                },
                "url": {
                    "raw": "http://localhost:8000/api/posts/",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "8000",
                    "path": [
                        "api",
                        "posts"
                    ]
                }
            }
        },
        {
            "name": "Get All Posts",
            "request": {
                "method": "GET",
                "url": {
                    "raw": "http://localhost:8000/api/posts/",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "8000",
                    "path": [
                        "api",
                        "posts"
                    ]
                }
            }
        },
        {
            "name": "Add Comment",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer <your_token>"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"post\": 1,\n    \"text\": \"Great post!\"\n}"
                },
                "url": {
                    "raw": "http://localhost:8000/api/comments/",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "8000",
                    "path": [
                        "api",
                        "comments"
                    ]
                }
            }
        }
    ]
}